.container.py-5
  .row.justify-content-center
    .col-md-8.col-lg-6
      .card.border-0.shadow-lg.rounded-4.overflow-hidden
        .card-header.bg-gradient.p-4.text-center{style: "background-color: #4e73df;"}
          %h1.text-white.mb-0.fw-bold 
            %i.bi.bi-person-plus.me-2
            アカウント登録

        .card-body.p-4.p-lg-5
          = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "needs-validation", novalidate: true}) do |f|
            .mb-4
              %label.text-muted{for: "email-input"}
                %i.bi.bi-envelope.me-1
                メールアドレス
              = f.input :email,
                required: false,
                autofocus: true,
                label: false,
                input_html: { autocomplete: "email", class: "form-control rounded-3 mt-1", id: "email-input" }

            .mb-4
              %label.text-muted{for: "password-input"}
                %i.bi.bi-key.me-1
                パスワード
              = f.input :password,
                required: false,
                label: false,
                hint: (@minimum_password_length ? "#{@minimum_password_length} 文字以上で設定してください" : nil),
                input_html: { autocomplete: "current-password", class: "form-control rounded-3 mt-1", id: "password-input" }

            .mb-4
              %label.text-muted{for: "password-input"}
                %i.bi.bi-key.me-1
                パスワード再入力
              = f.input :password_confirmation,
                required: false,
                label: false,
                input_html: { autocomplete: "current-password", class: "form-control rounded-3 mt-1", id: "password-input" }
                
            .d-grid.gap-3.mt-4
              %button.btn.btn-primary.btn-md.rounded-3.py-2{type: "submit"}
                %i.bi.bi-check-circle.me-2
                アカウント登録
              
              - if controller_name != 'sessions'
                = link_to new_session_path(resource_name), class: "btn btn-outline-secondary rounded-3" do
                  %i.bi.bi-box-arrow-in-right.me-1
                  ログイン

